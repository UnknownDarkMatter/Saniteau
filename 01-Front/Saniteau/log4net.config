<log4net>
	<appender name="Log" type="log4net.Appender.RollingFileAppender">
		<File value="Logs\Saniteau" type="log4net.Util.PatternString"/>
		<DatePattern value=".yyyyMMdd'.log'"/>
		<staticFileName value="false"/>
		<AppendToFile value="true"/>
		<rollingStyle value="date"/>
		<staticLogFileName value="false"/>
		<preserveFileNameExtension value="true"/>
		<maxBackupIndex value="7"/>
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%-4date - %level - %message%newline"/>
		</layout>
	</appender>
	<root>
		<level value="DEBUG"/>
		<appender-ref ref="Log"/>
	</root>
</log4net>